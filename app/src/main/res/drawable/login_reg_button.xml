<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/color_login_bt_end" android:startColor="@color/color_login_bt_start" />
            <corners android:radius="4dip" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/color_login_bt_start" android:startColor="@color/color_login_bt_end" />
            <corners android:radius="4dip" />
        </shape>
    </item>

</selector>